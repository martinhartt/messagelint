{
  "name": "messagelint",
  "version": "1.0.5",
  "description": "A commit message formatter",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'",
    "start": "node dist/index.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "format": "prettier --write --print-width 100 --single-quote --trailing-comma all --parser typescript 'src/**/*.ts'",
    "build": "tsc",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinhartt/messagelint.git"
  },
  "keywords": [
    "commit",
    "lint",
    "better"
  ],
  "author": "Martin Hartt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martinhartt/messagelint/issues"
  },
  "homepage": "https://github.com/martinhartt/messagelint#readme",
  "bin": {
    "messagelint": "./bin/messagelint"
  },
  "dependencies": {
    "@types/chai": "^4.0.2",
    "@types/commander": "^2.9.1",
    "@types/execa": "^0.7.0",
    "@types/mocha": "^2.2.41",
    "@types/mz": "0.0.31",
    "chai": "^4.1.1",
    "commander": "^2.11.0",
    "execa": "^0.8.0",
    "mocha": "^3.5.0",
    "mz": "^2.6.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "prettier": "^1.5.3",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-eslint-rules": "^4.1.1"
  }
}
